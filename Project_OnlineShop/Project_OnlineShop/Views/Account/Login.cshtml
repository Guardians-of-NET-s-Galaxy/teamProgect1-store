@model OnlineShop.Domain.DTOs.SiteSide.Account.UserLoginDTO

<!DOCTYPE html>
<html lang="fa">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png"
          href="https://www.digikala.com/mag/wp-content/themes/digikalamag/assets/common/img/ms-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="144x144"
          href="https://www.digikala.com/mag/wp-content/themes/digikalamag/assets/common/img/ms-icon-144x144.png">
    <title>ورود در دیجی استور</title>
    <!--    font-->
    <link rel="stylesheet" href="/SiteSide/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="/SiteSide/assets/css/materialdesignicons.css">
    <link rel="stylesheet" href="/SiteSide/assets/css/materialdesignicons.css.map">
    <!--    font-->
    <link rel="stylesheet" href="/SiteSide/assets/css/bootstrap.css">
    <link rel="stylesheet" href="/SiteSide/assets/css/style.css">
</head>

<body>
    <div id="main">
        <div class="col-lg-4 col-md-6 col-xs-12 mx-auto">
            <div class="account-box">
                <a href="@Url.Action("Index", "Home")" class="logo-account"><img src="/SiteSide/assets/images/logo-login.png" alt="logo"></a>
                <span class="account-head-line">ورود به گلکسی گاردینز</span>
                <div class="content-account">

                    <div class="massege-light">
                        در صورتی که کاربر جدید هستید ثبت نام کنید.
                        <br />
                        @TempData["ErrorMessage"]
                    </div>

                    <form id="login" asp-controller="Account" asp-action="Login">

                        <label for="email-phone">شماره موبایل خود را وارد کنید</label>
                        <input type="text" id="email-phone" class="input-email-account" placeholder="" asp-for="Mobile">

                        <a href="@Url.Action("PasswordForget", "Account")" class="account-link-password">رمز خود را فراموش کرده ام</a>

                        <label for="password">رمز عبور</label>
                        <input type="password" id="password" class="input-password" placeholder="" asp-for="Password">

                        <div class="parent-btn">
                            <button class="dk-btn dk-btn-info">
                                ورود به گلکسی گاردینز
                                <i class="fa fa-sign-in sign-in"></i>
                            </button>
                        </div>
                        <div class="form-auth-row">
                            <label for="remember" class="ui-checkbox">
                                <input type="checkbox" value="1" name="login" checked="" id="remember">
                                <span class="ui-checkbox-check"></span>
                            </label>
                            <label for="remember" class="remember-me">مرا به خاطر داشته باش</label>
                        </div>
                    </form>
                </div>
                <div class="account-footer">
                    <span>کاربر جدید هستید؟</span>
                    <a href="@Url.Action("Register", "Account")" class="btn-link-register">ثبت‌نام در گلکسی گاردینز</a>
                </div>
            </div>
        </div>
    </div>
    <script src="/SiteSide/assets/js/jquery-3.2.1.min.js"></script>
    <script src="/SiteSide/assets/js/bootstrap.js"></script>
</body>

</html>